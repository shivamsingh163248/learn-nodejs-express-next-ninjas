<form action="/new-product" method="POST">
    <div class="form-group">
        <label for="name">Product Name</label>
        <input type="text" class="form-control" id="name" name="name" placeholder="Enter Product Name">
    </div>
    <div class="form-group">
        <label for="desc">Product Description</label>
        <input type="text" class="form-control" id="desc" name="desc" placeholder="Enter Product Description">
    </div>
    <div class="form-group">
        <label for="prise">Product Prise</label>
        <input type="text" class="form-control" id="prise" name="prise" placeholder="Enter Product Prise">
    </div>
    <div class="form-group">
        <label for="image">Product Image</label>
        <input type="url" class="form-control" id="image" name="image">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>

    
